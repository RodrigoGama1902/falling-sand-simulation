                "-I${workspaceFolder}\\src\\utils",
                "-I${workspaceFolder}\\src\\graphics",
                "-I${workspaceFolder}\\src\\shapes",
                "-I${workspaceFolder}\\src\\app",
                "-I${workspaceFolder}\\src\\base_elements",
                "-I${workspaceFolder}\\src\\elements",
                "-I${workspaceFolder}\\src\\grid",
                "-I${workspaceFolder}\\src\\tools",
                "-I${workspaceFolder}\\src\\simulation",
                "-I${workspaceFolder}\\src\\editor",
                "-I${workspaceFolder}\\include",
                "-L${workspaceFolder}\\lib",
                "${fileDirname}\\utils\\*.cpp",  
                "${fileDirname}\\graphics\\*.cpp",
                "${fileDirname}\\shapes\\*.cpp",
                "${fileDirname}\\app\\*.cpp",
                "${fileDirname}\\elements\\*.cpp",
                "${fileDirname}\\base_elements\\*.cpp",
                "${fileDirname}\\grid\\*.cpp",
                "${fileDirname}\\tools\\*.cpp",
                "${fileDirname}\\simulation\\*.cpp",
                "${fileDirname}\\editor\\*.cpp",
                "-lSDL2main",   
                "-lSDL2",
                "-o",
                "${workspaceFolder}\\build\\main.exe"
