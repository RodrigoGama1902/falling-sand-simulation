{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe arquivo de build ativo",
            "command": "C:\\Program Files\\mingw-w64\\mingw64\\bin\\g++.exe",
            "args": [
                "${fileDirname}\\*.cpp",
                "-fdiagnostics-color=always",
                "-g",
                "-Wall",
